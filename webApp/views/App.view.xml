<mvc:View
	displayBlock="true"
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="SAP-1.webApp.controllers.App"
>
	<Button
		text="{i18n>showHelloButtonText}"
		press="onShowHello"
	/>
	<Input
		value="{helloPanel>/recipient/name}"
		description="Hello {helloPanel>/recipient/name}"
		valueLiveUpdate="true"
		width="60%"
	/>
	<Carousel>
		<pages>
			<Image
				src="https://s00.yaplakal.com/pics/pics_original/7/2/7/12676727.jpg"
				height="600px"
			/>
			<Image
				src="https://i.pinimg.com/originals/89/a5/3a/89a53a439d65e1d8ddffd1f1c5f67d36.jpg"
				height="600px"
			/>
			<Image
				src="https://img5.goodfon.ru/wallpaper/nbig/9/5b/voda-padaiushchaia-zvezda-nebo-noch.jpg"
				height="600px"
			/>
		</pages>
	</Carousel>
</mvc:View>
